<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <Button
        android:id="@+id/bt_ver_latidos"
        android:layout_width="320dp"
        android:layout_height="80dp"
        android:layout_marginBottom="20dp"
        android:drawableRight="@drawable/ic_animal"
        android:text="LATIDOS"
        app:layout_constraintBottom_toTopOf="@+id/bt_ver_informacoes"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/bt_ver_informacoes"
        android:layout_width="320dp"
        android:layout_height="80dp"
        android:layout_marginBottom="20dp"
        android:drawableRight="@drawable/ic_animal"
        android:text="Ver informações"
        app:layout_constraintBottom_toTopOf="@+id/bt_ver_perfil"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />


    <Button
        android:id="@+id/bt_ver_perfil"
        android:layout_width="320dp"
        android:layout_height="80dp"
        android:layout_marginBottom="300dp"
        android:drawableRight="@drawable/ic_animal"
        android:text="Ver Perfil"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />




</androidx.constraintlayout.widget.ConstraintLayout>